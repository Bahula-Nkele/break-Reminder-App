<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"

        android:text="@string/welcome_message"/>



    <TextView
        android:id="@+id/break_length_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break length (minutes):"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/break_length_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/break_frequency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break frequency (minutes):"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/break_frequency_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/start_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"/>

    <Switch
        android:id="@+id/is_running_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="Is running"/>

    <TextView
        android:id="@+id/break_timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"/>



</LinearLayout>







